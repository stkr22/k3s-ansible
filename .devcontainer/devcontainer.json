{
	"name": "vscode-k3s-ansible-dev-environment",
	"build":{
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.ansible",
				"yzhang.markdown-all-in-one",
				"DavidAnson.vscode-markdownlint"
			]
		}
	},
	"mounts": [
		{
			"source": "${localEnv:HOME}/.kube",
			"target": "/home/vscode/.kube",
			"type": "bind"
		}
	],
	"containerEnv": {
		"KUBECONFIG": "/home/vscode/.kube/config"
	}
}
